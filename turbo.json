{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "deploy": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "lint": {
      "cache": false
    },
    "lint:fix": {
      "cache": false
    },
    "preview": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["build"]
    }
  }
}
