---
import HeaderIconLink from './HeaderIconLink.astro'
import HeaderSection from './HeaderSection.astro'

import BrainIcon from '../icons/BrainIcon.astro'
import GitHubIcon from '../icons/GitHubIcon.astro'
import InfoIcon from '../icons/InfoIcon.astro'
import LinkIcon from '../icons/LinkIcon.astro'
import MobilePhoneIcon from '../icons/MobilePhoneIcon.astro'
import VideoIcon from '../icons/VideoIcon.astro'
---
<header class="bg-slate-50 dark:bg-slate-800 lg:fixed lg:inset-y-0 lg:left-0 lg:flex lg:w-90 lg:items-start lg:overflow-y-auto">
  <div class="flex flex-col relative z-10 mx-auto px-4 pt-10 pb-4 sm:px-6 md:w-screen md:px-4 lg:min-h-full lg:border-r lg:border-slate-200 dark:lg:border-slate-700 lg:px-8 lg:py-12 xl:px-12">
    <div class="text-pink-700 dark:text-pink-300">
      <BrainIcon className="size-24" />
    </div>
    <div class="mt-6">
      <h1 class="text-xl font-bold text-slate-900 dark:text-slate-100">Disonnected, but smart</h1>
      <div class="mt-3 text-lg/8 font-medium text-slate-700 dark:text-slate-300">TinyML for sustainable AI deployment</div>
    </div>
    <div class="flex-1 flex flex-col gap-12 justify-between mt-12">
      <HeaderSection isHiddenOnMobile={true} title="About">
        <InfoIcon slot="icon" />
        <p class="mt-2 text-base text-slate-700 dark:text-slate-300">
          This research project is being completed for credit as part of CS 8093 Special Projects (Fall 2025) at Georgia Institute of Technology.
        </p>
      </HeaderSection>
      <HeaderSection title="Links">
        <LinkIcon slot="icon" />
        <ul role="list" class="mt-4 flex justify-center gap-10 text-base/7 font-medium text-slate-700 dark:text-slate-300 sm:gap-8 lg:flex-col lg:gap-4">
          <li class="flex">
            <HeaderIconLink href="https://github.com/cs8903-fall-2025/project" title="Source Code">
              <GitHubIcon slot="icon" />
            </HeaderIconLink>
          </li>
          <li class="flex">
            <HeaderIconLink href="https://cs8903-odc-app.nkenyeres3.workers.dev" title="Application">
              <MobilePhoneIcon slot="icon" />
            </HeaderIconLink>
          </li>
          <!-- Coming Soon
          <li class="flex">
            <HeaderIconLink href="#" title="Demo Video">
              <VideoIcon slot="icon" />
            </HeaderIconLink>
          </li>
          -->
        </ul>
      </HeaderSection>
    </div>
  </div>
</header>
